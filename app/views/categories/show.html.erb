<div class="container">
  <div class="row">
    <h2><%= @category.name %></h2>

    <div class="col-md-3">
      <% @category.ancestor_categories.each do |category| %>
        <%= link_to category.name, category %> <%= ">>" unless @category.parent == category %>
      <% end %><br>

      <%= image_tag @category.image, class: "img-rounded img-thumbnail" %>
    </div>

    <div class="col-md-9">
      <table class="table">
        <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Image</th>
            <th>Detail</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.id %></td>
              <td><%= category.name %></td>
              <td><%= link_to category.image, category.image, target: "_blank" %></td>
              <td><%= link_to "Show", category %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
